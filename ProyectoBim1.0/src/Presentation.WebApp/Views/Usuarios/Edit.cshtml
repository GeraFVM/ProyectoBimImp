@{
    ViewData["Title"] = "Usuarios > Editar";
}

@model Domain.Entities.IM253E01Usuario

<h1>
    Actualizar:
</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" required />
    <input asp-for="Foto" type="hidden" required />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre:</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Edad" class="form-label">Edad:</label>
        <input asp-for="Edad" type="number" class="form-control" required min="1" max="120" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefono" class="form-label">Tel√©fono:</label>
        <input asp-for="Telefono" class="form-control" required />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.Foto))
    {
        <img src="@Model.Foto" alt="Foto del usuario" />
    }
    <br />
    
    <div class="form-group mb-3">
        <label class="form-label">Foto:</label>
        <input type="file" name="file" class="form-control" accept=".jpg,.png,.jpeg,.gif" />
        <small class="form-text text-muted">Formatos aceptados: JPG, PNG, JPEG, GIF</small>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Cancelar</a>