@{
    ViewData["Title"] = "Usuarios";
}

@model List<Domain.Entities.IM253E01Usuario>

<div class="container mt-4">
    <h1 class="mb-4">Lista de Usuarios</h1>

    <a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo Usuario</a>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchId" class="form-control" placeholder="Buscar por ID..." value="@ViewData["CurrentIdFilter"]" />
            <button type="submit" class="btn btn-outline-secondary">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Id</td>
                        <td>@e.Nombre</td>
                        <td>
                            <a href="#" onclick="showDetailsModal('@e.Id')" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a href="#" onclick="Delete('@e.Id')" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">No se encontraron usuarios.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles del Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="detailsContent">Cargando...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="eliminarModal" tabindex="-1" role="dialog" aria-labelledby="eliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eliminarModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar este registro? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                <form asp-action="Delete" asp-controller="Usuarios" method="post" id="deleteForm" style="display:inline;">
                    <input type="hidden" name="id" id="deleteIdInput" />
                    @* @Html.AntiForgeryToken() <--- ELIMINADO *@
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function Delete(id) {
            $('#deleteIdInput').val(id);
            $('#eliminarModal').modal('show');
        }
        function showDetailsModal(id) {
            $('#detailsContent').html('Cargando detalles...');
            $.ajax({
                url: '@Url.Action("Details", "Usuarios")',
                type: 'GET',
                data: { id: id },
                success: function(result) {
                    $('#detailsContent').html(result);
                    $('#detailsModal').modal('show');
                },
                error: function(xhr, status, error) {
                    console.error("Error al cargar detalles:", error);
                    $('#detailsContent').html('<p class="text-danger">No se pudieron cargar los detalles.</p>');
                    $('#detailsModal').modal('show');
                }
            });
        }
    </script>
}