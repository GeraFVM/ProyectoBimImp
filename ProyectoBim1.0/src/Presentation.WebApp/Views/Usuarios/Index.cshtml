@{
    ViewData["Title"] = "Usuarios";
}

@model List<Domain.Entities.IM253E01Usuario>

<a asp-action="Create">Crear Nuevo</a>

<h1>
    Mostrar:
</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchId" class="form-control" placeholder="Buscar por ID..." value="@ViewData["CurrentFilter"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
        </div>
    </div>
</form>

<table>
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Edad</th> <th></th>
    </tr>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Id</td>
            <th>@e.Nombre</th>
            <td>@(e.Edad?.ToString() ?? "N/A")</td> <td>
                <a asp-action="Details" asp-route-id="@e.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@e.Id">Editar</a> |
                <a href="#" onclick="confirmDelete('@e.Id'); return false;">Eliminar</a>
            </td>
        </tr>
    }
</table>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("¿Estás seguro de que quieres eliminar a este usuario? Esta acción no se puede deshacer.")) {
                window.location.href = '@Url.Action("Delete", "Usuarios")/' + id;
            }
        }
    </script>
}