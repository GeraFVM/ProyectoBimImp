@{
    ViewData["Title"] = "Libros > Detalles";
}

@model Domain.Entities.IM253E01Libro

<div class="container mt-4">
    <h1 class="mb-4">Detalles del Libro</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Id:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Autor:</dt>
            <dd class="col-sm-9">@(Model.Autor ?? "N/A")</dd>

            <dt class="col-sm-3">Editorial:</dt>
            <dd class="col-sm-9">@(Model.Editorial ?? "N/A")</dd>

            <dt class="col-sm-3">ISBN:</dt>
            <dd class="col-sm-9">@(Model.ISBN ?? "N/A")</dd>

            <dt class="col-sm-3">Foto:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Foto))
                {
                    <img src="@Model.Foto" alt="Foto del libro" class="img-fluid" style="max-width:300px; height:auto;" />
                }
                else
                {
                    <span>No disponible</span>
                }
            </dd>
        </dl>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>