@{
    ViewData["Title"] = "Préstamo > Editar";
}

@model Domain.Entities.IM253E01Prestamo

<div class="container mt-4">
    <h1 class="mb-4">Actualizar Préstamo</h1>

    <form asp-action="Edit" class="needs-validation" novalidate>
        <input asp-for="Id" type="hidden" />

        <div class="form-group mb-3">
            <label asp-for="UsuarioId" class="form-label">Usuario:</label>
            <select asp-for="UsuarioId" asp-items="ViewBag.UsuarioId" class="form-select" required>
                <option value="">Seleccione un usuario</option>
            </select>
            <span asp-validation-for="UsuarioId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LibroId" class="form-label">Libro:</label>
            <select asp-for="LibroId" asp-items="ViewBag.LibroId" class="form-select" required>
                <option value="">Seleccione un libro</option>
            </select>
            <span asp-validation-for="LibroId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaPrestamo" class="form-label">Fecha de Préstamo:</label>
            <input asp-for="FechaPrestamo" type="date" class="form-control" required 
                   max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaPrestamo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaDevolucion" class="form-label">Fecha de Devolución (Opcional):</label>
            <input asp-for="FechaDevolucion" type="date" class="form-control" 
                   min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">Actualizar Préstamo</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
